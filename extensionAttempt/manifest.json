{
    "name": "Jot note",
    "description": "A note taking extension to help organize and schedule",
    "version": "3.0.0",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
       "page": "background.html",
       "persistent": false
    },
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html",
        "default_icon": "logo.png"
    },
    "permissions": [
        "tabs"

    ]
}
